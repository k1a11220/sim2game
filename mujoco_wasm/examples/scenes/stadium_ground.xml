<mujoco model="stadium_ground">
  <asset>
    <texture type="2d" name="ground_tex" builtin="gradient" width="1024" height="1024"
      rgb1="0.3 0.5 0.3" rgb2="0.2 0.4 0.2"/>
    <material name="ground_material" texture="ground_tex" texuniform="true"
      reflectance="0" specular="0" shininess="0"/>
    <material name="tower_material" rgba="0.5 0.5 0.5 1"/>
  </asset>

  <worldbody>
    <geom name="ground" type="plane" size="0 0 1" material="ground_material" friction="1 0.1 0.05"/>
    <geom name="tower1" type="box" size="3 3 25" material="tower_material" pos="15 0 25"/>
    <geom name="tower2" type="box" size="3 3 25" material="tower_material" pos="-15 0 25"/>
  </worldbody>
</mujoco>
